@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Main_Node.Models.Task

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Task</h4>
    <hr/>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.URL)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.URL)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Method)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Method)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Result)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Result)
        </dd>
        @if (Model is MultipleTasks multipletask)
        {
            foreach (SubTask subTask in multipletask.Tasks)
            {
                <hr/>
                <dt class="col-sm-2">
                    Id
                </dt>
                <dd class="col-sm-10">
                    @subTask.Id
                </dd>
                <dt class="col-sm-2">
                    Methode
                </dt>
                <dd class="col-sm-10">
                    @subTask.Method
                </dd>
                <dt class="col-sm-2">
                    Result
                </dt>
                <dd class="col-sm-10">
                    @subTask.Result
                </dd>
            }
        }
    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>